<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/checkin_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:cropToPadding="true"
                android:background="@android:color/darker_gray"
                />

            <ImageButton
                android:id="@+id/checkin_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkin_title_label"
                style="?android:listSeparatorTextViewStyle"
                />

            <EditText
                android:id="@+id/checkin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/checkin_title_hint"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place"
                style="?android:listSeparatorTextViewStyle"/>

            <EditText
                android:id="@+id/checkin_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the place of the CheckIn."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                style="?android:listSeparatorTextViewStyle"/>

            <EditText
                android:id="@+id/checkin_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the details of the checkIn."/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/date_label"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_picker_title"/>

    <Button
        android:id="@+id/checkin_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_picker_title"/>

    <TextView
        android:id="@+id/location_label"
        android:text="location"
        style="?android:listSeparatorTextViewStyle"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/location_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_button_text"/>

    <Button
        android:id="@+id/checkin_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_button_text"/>

</LinearLayout>